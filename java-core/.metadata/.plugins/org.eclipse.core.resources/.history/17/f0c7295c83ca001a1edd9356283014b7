package OOP;

import java.util.ArrayList;
import java.util.List;

public abstract class Machine implements IFunctionMachine {

	private Integer id;
	private String name;
	private List<Products> listProducts;

	public Machine(Integer id, String name) {
		this.id = id;
		this.name = name;
		listProducts = new ArrayList<Products>();
		Products products1 = new Products(1, "Water 1", 5);
		Products products2 = new Products(1, "Water 2", 5);
		Products products3 = new Products(1, "Water 3", 5);
		listProducts.add(products1);
		listProducts.add(products2);
		listProducts.add(products3);
		
	}
	
	


	public Machine() {

	}

	public Integer getId() {
		return id;
	}

	public void setId(Integer id) {
		this.id = id;
	}

	public String getName() {
		return name;
	}

	public void setName(String name) {
		this.name = name;
	}

	@Override
	public void selectMachine() {
		System.out.println("You selectting parent machine");

	}


	@Override
	public void showMenu() {
		for (int i = 0; i < listProducts.size(); i++) {
				System.out.println(listProducts.get(i).getName());
		}
		
	}

}
