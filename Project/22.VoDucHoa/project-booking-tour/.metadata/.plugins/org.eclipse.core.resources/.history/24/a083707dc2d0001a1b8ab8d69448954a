	@Override
	public void addTour(TourEntity tour) {
		TourEntity tour1 = new TourEntity();
		// TODO Auto-generated method stub
		String nameTour = null;
		System.out.print("nametour: ");
		nameTour = input.next();
		tour1.setName_tour(nameTour);
		
		String locationTour = null;
		System.out.print("locationTour: ");
		locationTour = input.next();
		tour1.setLocation_start(locationTour);
		
		String timeStart = null;
		System.out.print("timeStart(hh:mm:ss): ");
		timeStart = input.next();
		tour1.setTime_start(timeStart);
		
		String dateStart = null;
		System.out.print("dateStart(yyyy-mm-dd): ");
		dateStart = input.next();
		tour1.setDate_start(dateStart);
		
		int memCount = 0;
		System.out.print("memCount: ");
		memCount = input.nextInt();
		tour1.setMem_number(memCount);
		
		try {
			String queryString = "INSERT INTO "
		+"tour(name_tour, location_start, time_start, date_start, mem_number)" 
		+"VALUES(?,?,?,?,?)";
			connection = getConnection();
			stmt = connection.prepareStatement(queryString);
			stmt.setString(1, tour1.getName_tour());
			stmt.setString(2, tour1.getLocation_start());
			stmt.setString(3, tour1.getTime_start());
			stmt.setString(4, tour1.getDate_start());
			stmt.setInt(5, tour1.getMem_number());
			System.out.println(tour1.getName_tour());
			System.out.println(tour1.getLocation_start());
			stmt.executeUpdate();
		} catch (SQLException e) {
			// TODO: handle exception
			e.printStackTrace();
		}finally {
			try {
				if (stmt != null) {
					stmt.close();
				}
				if (connection != null) {
					connection.close();
				}
			} catch (SQLException e) {
				e.printStackTrace();
			}catch (Exception e) {
				e.printStackTrace();
			}
		}
	}

